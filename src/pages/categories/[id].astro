---
import CategoryPosts from '../../layouts/CategoryPosts.astro'

export function getStaticPaths() {
  const categories = [
    {
      id: 'webdev',
      name: 'WebDevelopment'
    },
    {
      id: 'cs',
      name: 'ComputerScience'
    },
    {
      id: 'prod',
      name: 'Productivity'
    }
  ]
  return categories.map(({ id, name }) => {
    return {
      params: { id },
      props: { name }
    }
  })
}
const { name } = Astro.props
---

<CategoryPosts category={name} />
